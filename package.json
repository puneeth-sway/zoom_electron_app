{
  "name": "pure-zoom-electron",
  "version": "1.0.0",
  "description": "Electron application with video call features like Zoom",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "server": "node server/signature-server.js",
    "server:dev": "nodemon server/signature-server.js",
    "setup": "node setup.js",
    "install-all": "node install-dependencies.js",
    "install-server": "cd server && npm install",
    "postinstall": "npm run install-server",
    "test-sdk": "node test-zoom-sdk.js",
    "test-browser": "echo 'Run this in Electron DevTools console: copy-paste browser-test.js content'",
    "test-zoom-structure": "echo 'Run this in Electron DevTools console: copy-paste zoom-sdk-test.js content'",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "video-call",
    "zoom",
    "webrtc"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@zoom/videosdk": "^2.2.5",
    "jsrsasign": "^11.1.0",
    "uuid": "^9.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "build": {
    "appId": "com.purezoom.electron",
    "productName": "Pure Zoom Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!src/**/*",
      "!test-*.html",
      "!setup.js",
      "!install-*.js",
      "!install-*.bat"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
